CXX = c++

CXXFLAGS = -Wall -Werror -Wextra -std=c++98

RM = rm -f

HEADER = whatever.hpp

SRC = main.cpp

NAME = ex00

OBJ = $(SRC:.cpp=.o)

all: $(NAME)

$(NAME): $(OBJ) $(HEADER)
	$(CXX) $(CXXFLAGS) $(OBJ) -o $(NAME)
	
clean:
	$(RM) $(OBJ)
	
fclean: clean
	$(RM) $(NAME)
	
re: fclean all

