CXX = c++

CXXFLAGS = -Wall -Werror -Wextra -std=c++98

NAME = scav

HEADER = ClapTrap.hpp ScavTrap.hpp

RM = rm -f

SRC = main.cpp ClapTrap.cpp ScavTrap.cpp

OBJS = $(SRC:.cpp=.o)

all: $(NAME)

$(NAME): $(OBJS) $(HEADER)
	$(CXX) $(CXXFLAGS) $(OBJS) -o $(NAME)

clean:
	$(RM) $(OBJS)

fclean: clean
	$(RM) $(NAME)

re: fclean all
